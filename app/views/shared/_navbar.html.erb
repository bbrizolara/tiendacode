<div class="container">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to "Users", users_path, class: "nav-link px-2 link-dark" %></li>
        <li><%= link_to "Products", products_path, class: "nav-link px-2 link-dark" %></li>
      </ul>
      
        <% if logged_in? %>   
          <div class="col-md-3 text-end">       
            <%= link_to current_user.name, current_user, class: "btn btn-primary" %>
            <%= link_to "Log out", session_path(current_user), method: :delete, class: "btn btn-outline-primary me-2" %>
          </div>
          <% else %>
            <div class="col-md-3 text-end">
              <%= link_to "Sign In", new_session_path, class: "btn btn-outline-primary me-2" %>
              <%= link_to "Sign Up", new_user_path, class: "btn btn-primary" %>
            </div>
          <% end %>
    </header>
  </div>
