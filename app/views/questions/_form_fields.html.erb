<% unless logged_in? %> 
  <%= f.input :user_email, label: 'Email' %>  
  <%= f.input :user_name, label: 'Name' %>
<% end %> 
<%= f.input :question, label: 'Question', input_html: { rows: 3 } %>  
<br>
<div class="form-group mb-2">
  <div class="col-sm-9 offset-sm-0">
    <%= f.button :submit, 'Send', class: "btn-primary" %>
    <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
  </div>
</div>
