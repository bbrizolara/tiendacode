<%= simple_form_for :session, url: sessions_path,
  wrapper: :vertical_form do |f| %>
  <%= f.input :email%>
  <%= f.input :password %>
  <br>
  <div class="form-group mb-2">
    <div class="col-sm-9 offset-sm-0">
      <%= f.button :submit, 'Sign in', class: "btn-primary" %>
      <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
    </div>
  </div>
  <div class="mb-3">
    <p>New user? <%= link_to "Sign up now!", new_user_path, class: "btn btn-link" %></p>
  </div>
<% end %>
