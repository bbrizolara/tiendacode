<h1 class="text-center mb-3">Sign in</h1>
<br>
<%= render 'shared/flash' %>
<%= simple_form_for :session, url: sessions_path do |f| %>

  <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-12 col-md-8 col-lg-6 col-xl-8">
      <div class="form-inputs">
        <div class="form-floating mb-3">
          <%= f.input :email, class:"form-control" %>
        </div>
        <div class="form-floating mb-3">
          <%= f.input :password %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, 'Sign in', class: "btn btn-primary" %>
      </div>    
      <div class="mb-3">
        <p>New user? <%= link_to "Sign up now!", new_user_path, class: "btn btn-link" %></p>
      </div>
    </div>
  </div>
<% end %> 
