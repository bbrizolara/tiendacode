<%= simple_form_for product, wrapper: :vertical_form do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if 
      f.object.errors[:base].present? %>  
    <%= f.input :name %>  
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :image, class: "form-control", type: "file" %>
    <% if product.image.attached? %>
      <p>
        <%= image_tag product.image %>
      </p>
    <% end %>    
  <br>
  <div class="form-group mb-2">
    <div class="col-sm-9 offset-sm-0">
      <%= f.button :submit, 'Confirm', class: "btn-primary" %>
      <%= f.button :button, "Cancel", type: "reset", class: "btn-outline-secondary" %>
    </div>
  </div>
  <%= link_to 'Back', products_path, class: "btn btn-link" %>
<% end %>
